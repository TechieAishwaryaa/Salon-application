<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F3F6"
    android:orientation="vertical"
    tools:context=".Appointment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/d1"
        android:layout_gravity="center_horizontal"></DatePicker>



<AbsoluteLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="500dp"
        android:layout_x="5dp"
        android:layout_height="320dp"
        android:layout_marginLeft="2dp"
        android:layout_gravity="center"
        app:cardElevation="50dp"
        app:cardCornerRadius="30dp">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/r1"
            android:orientation="vertical">

            <RadioButton
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_x="20dp"
                android:layout_y="60dp"
                android:id="@+id/rb1"
                android:text="10:00 AM"
                app:cornerRadius="400dip"
                android:textColor="@color/black"></RadioButton>

            <RadioButton
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="-50dp"
                android:layout_x="20dp"
                android:layout_y="50dp"
                android:id="@+id/rb2"
                android:text="11:00 AM"
                android:textColor="@color/black"></RadioButton>


            <RadioButton
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_y="70dp"
                android:id="@+id/rb3"
                android:text="12:00 AM"
                android:textColor="@color/black"></RadioButton>

            <RadioButton
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="-50dp"
                android:id="@+id/rb4"
                android:text="1:00 PM "
                android:textColor="@color/black"></RadioButton>


            <RadioButton
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_y="140dp"
                android:id="@+id/rb5"
                android:text="2:00 AM "
                android:textColor="@color/black"></RadioButton>

            <RadioButton
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:id="@+id/rb6"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="-50dp"
                android:layout_x="220dp"
                android:layout_y="140dp"
                android:text="4:00 PM"
                android:textColor="@color/black"></RadioButton>


            <RadioButton
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_y="210dp"
                android:layout_marginLeft="10dp"
                android:text="5:00 AM"
                android:id="@+id/rb7"
                android:textColor="@color/black"></RadioButton>


            <RadioButton
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:id="@+id/rb8"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="-50dp"
                android:layout_x="220dp"
                android:layout_y="210dp"

                android:text="6:00 PM"
                android:textColor="@color/black"
                ></RadioButton>
            <RadioButton
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:id="@+id/rb9"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_x="220dp"
                android:layout_y="210dp"

                android:text="7:00 PM"
                android:textColor="@color/black"
                ></RadioButton>
            <RadioButton
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:id="@+id/rb10"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="-50dp"
                android:layout_x="220dp"
                android:layout_y="210dp"

                android:text="8:00 PM"
                android:textColor="@color/black"
                ></RadioButton>

        </RadioGroup>

    </androidx.cardview.widget.CardView>
    </HorizontalScrollView>

</AbsoluteLayout>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="SERVICE RATE: "
    android:textSize="25sp"
    android:textColor="@color/black"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="30dp"></TextView>

            <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textColor="@color/black"
                android:layout_marginTop="-40dp"
                android:textSize="30sp"
               ></TextView>
        <Button
            android:layout_width="300dp"
            android:layout_height="60dp"
            app:cornerRadius="360dip"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:backgroundTint="#48CDC1"
            android:text="BOOK APPOINTMENT"
            android:onClick="confirm"
            android:textSize="20sp"></Button>



    </LinearLayout>
    </ScrollView>
</LinearLayout>